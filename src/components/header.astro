<link href="https://fonts.googleapis.com/css?family=Montserrat:400,700&display=swap" rel="stylesheet">
<style>
  /* TU CSS ORIGINAL - NO SE HA TOCADO NADA AQUÍ */
  .header-shrink {
    padding-top: 0.5rem !important;
    padding-bottom: 0.5rem !important;
    transition: padding 0.3s, background 0.3s;
  }
  .logo-shrink {
    height: 3.5rem !important;
    transition: height 0.3s;
  }
  .header-link {
    color: #295234 !important;
    font-family: inherit;
    font-size: 16px;
    padding: 1rem 0;
    transition: color 0.2s;
  }
  .header-link:hover {
    color: #facc15 !important;
  }
  @media (max-width: 900px) {
    #header-inner {
      flex-direction: row;
      align-items: center;
      padding-top: 1rem !important;
      padding-bottom: 1rem !important;
      gap: 0;
    }
    .desktop-nav {
      display: none !important;
    }
    .mobile-menu-btn {
      display: flex !important;
    }
    .min-w-\[110px\] {
      display: none !important;
    }
    .logo-shrink,
    #header-logo {
      height: 3.5rem !important;
      max-height: 56px !important;
    }
    .h-20 {
      height: 3.5rem !important;
      max-height: 56px !important;
    }
    #mobile-nav {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background: rgba(255,255,255,0.98);
      z-index: 50;
      flex-direction: column;
      align-items: flex-start;
      padding: 2rem 1.5rem;
      box-shadow: 0 8px 32px rgba(0,0,0,0.12);
      border-radius: 0 0 1.5rem 1.5rem;
      animation: slide-in 0.3s ease-out;
    }
    #mobile-nav.open {
      display: flex;
    }
    #mobile-nav .header-link {
      width: 100%;
      padding: 1.2rem 0;
      font-size: 18px;
      border-bottom: 1px solid #f3f3f3;
      color: #295234 !important;
      text-align: left;
      margin-bottom: 0.5rem;
    }
    #mobile-nav .header-link:last-child {
      border-bottom: none;
    }
    #mobile-nav .lang-mobile-wrap {
      margin-top: 1.5rem;
      width: 100%;
      display: flex;
      justify-content: flex-start;
    }
    .mobile-menu-btn {
      margin-left: auto;
      background: #facc15;
      border: none;
      box-shadow: 0 1px 4px rgba(0,0,0,0.04);
      align-items: center;
      justify-content: center;
      padding: 0.5rem 0.7rem;
      border-radius: 0.5rem;
      z-index: 60;
    }
  }
  @media (min-width: 901px) {
    .mobile-menu-btn,
    #mobile-nav {
      display: none !important;
    }
  }
  @keyframes slide-in {
    from {
      transform: translateY(-100%);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }
</style>
<header
  id="main-header"
  class="fixed top-0 left-0 w-full z-50 bg-white/95 dark:bg-gray-900/50 shadow-md border-b border-gray-200"
>
  <div
    id="header-inner"
    class="max-w-7xl mx-auto px-6 py-6 flex items-center justify-between relative"
    style="font-family: 'Montserrat', 'Helvetica Neue', Helvetica, Arial, sans-serif; transition: padding 0.3s;"
  >
    <a href="#inicio" class="flex items-center min-w-[180px]">
      <img id="header-logo" src="/images/iconof.jpg" alt="Icono Forestal" class="h-20 w-auto object-contain transition-all duration-300" />
    </a>

    <div class="hidden md:flex items-center gap-6">
        <nav
          role="navigation"
          aria-label="Menú principal"
          class="desktop-nav"
          id="main-nav"
        >
          <ul class="flex flex-row space-x-4 font-semibold text-lg">
            <li><a href="#inicio" class="header-link">Servicios</a></li>
            <li><a href="#productos" class="header-link">Productos</a></li>
            <li><a href="#empresa" class="header-link">Empresa</a></li>
            <li><a href="#procesos" class="header-link">Procesos</a></li>
            <li><a href="#contacto" class="header-link">Contacto</a></li>
          </ul>
        </nav>

        <button
          id="lang-toggle"
          class="bg-white text-black font-semibold px-4 py-2 rounded-xl text-base font-sans hover:bg-yellow-400 hover:text-black transition flex items-center gap-2"
          type="button"
          style="font-family: inherit;"
        >
          <img id="lang-flag" src="/images/gb.png" alt="flag" class="w-6 h-6 inline" />
          <span id="lang-text">En</span>
        </button>
    </div>
    <button
      id="mobile-menu-btn"
      class="mobile-menu-btn md:hidden"
      aria-label="Abrir menú"
      type="button"
    >
      <svg class="w-7 h-7" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 8h16M4 16h16"/>
      </svg>
    </button>
  </div>

  <nav
    id="mobile-nav"
    class="mobile-nav"
    aria-label="Menú principal móvil"
  >
    <ul class="flex flex-col w-full font-semibold text-lg">
      <li><a href="#inicio" class="header-link">Servicios</a></li>
      <li><a href="#productos" class="header-link">Productos</a></li>
      <li><a href="#empresa" class="header-link">Empresa</a></li>
      <li><a href="#procesos" class="header-link">Procesos</a></li>
      <li><a href="#contacto" class="header-link">Contacto</a></li>
    </ul>
    <div class="lang-mobile-wrap">
      <button
        id="lang-toggle-mobile"
        class="bg-white border text-black font-semibold px-4 py-2 rounded-xl text-base font-sans hover:bg-yellow-400 hover:text-black transition flex items-center gap-2"
        type="button"
        style="font-family: inherit;"
      >
        <img id="lang-flag-mobile" src="/images/gb.png" alt="flag" class="w-6 h-6 inline" />
        <span id="lang-text-mobile">En</span>
      </button>
    </div>
  </nav>

  <script type="text/javascript">
    // Header shrink on scroll
    window.addEventListener('scroll', () => {
      const headerInner = document.getElementById('header-inner');
      const logo = document.getElementById('header-logo');
      if (window.scrollY > 30) {
        headerInner.classList.add('header-shrink');
        logo.classList.add('logo-shrink');
      } else {
        headerInner.classList.remove('header-shrink');
        logo.classList.remove('logo-shrink');
      }
    });

    // Mobile menu toggle
    const menuBtn = document.getElementById('mobile-menu-btn');
    const mobileNav = document.getElementById('mobile-nav');
    menuBtn.addEventListener('click', () => {
      mobileNav.classList.toggle('open');
      document.body.style.overflow = mobileNav.classList.contains('open') ? 'hidden' : '';
    });
    // Cerrar menú al hacer click en un enlace móvil
    document.querySelectorAll('#mobile-nav .header-link').forEach(link => {
      link.addEventListener('click', () => {
        if(window.innerWidth <= 900) {
          mobileNav.classList.remove('open');
          document.body.style.overflow = '';
        }
      });
    });

    // Sincronizar idioma en menú móvil
    const langBtn = document.getElementById('lang-toggle');
    const langBtnMobile = document.getElementById('lang-toggle-mobile');
    const langFlag = document.getElementById('lang-flag');
    const langFlagMobile = document.getElementById('lang-flag-mobile');
    const langText = document.getElementById('lang-text');
    const langTextMobile = document.getElementById('lang-text-mobile');
    if(langBtn && langBtnMobile) {
      function syncLang() {
        langFlagMobile.src = langFlag.src;
        langFlagMobile.alt = langFlag.alt;
        langTextMobile.textContent = langText.textContent;
      }
      langBtn.addEventListener('click', syncLang);
      langBtnMobile.addEventListener('click', function() {
        langBtn.click();
        syncLang();
      });
    }
  </script>
</header>