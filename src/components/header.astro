<header
  class="fixed top-0 left-0 w-full z-50 bg-white/95 dark:bg-gray-900/50 shadow-md border-b border-gray-200"
>
  <div
    class="max-w-6xl mx-auto px-6 py-7 flex flex-col md:flex-row md:items-center md:justify-between"
  >
    <!-- Logo -->
    <h1
      class="text-2xl md:text-3xl font-extrabold text-black font-sans dark:text-linknet-accent text-center md:text-left"
    >
      Forestal
    </h1>

    <!-- Botón EN/ES -->
    <div class="mt-2 md:mt-0 md:order-3 text-center md:text-right">
        <button
      id="lang-toggle"
      class="bg-white border text-black font-semibold px-6 py-3 rounded-xl text-base font-sans hover:bg-yellow-400 hover:text-black transition flex items-center gap-2 justify-center"
      type="button"
    >
      <img id="lang-flag" src="/images/gb.png" alt="flag" class="w-6 h-6 inline" />
      <span id="lang-text">EN</span>
    </button>
      <script type="module" src="/js/toggle-lang.js"></script>
    </div>

    <!-- Menú de navegación -->
    <nav
      role="navigation"
      aria-label="Menú principal"
      class="mt-3 md:mt-0 text-center md:text-right"
    >
      <ul
        class="flex flex-col md:flex-row md:space-x-8 space-y-2 md:space-y-0 text-black font-semibold"
      >
        <li>
          <a
            href="#inicio"
            class="group relative hover:text-yellow-400 transition"
            >Servicios<span
              class="absolute left-1/2 -translate-x-1/2 bottom-[-6px] w-2 h-2 bg-yellow-400 rounded-full opacity-0 group-hover:opacity-100 transition-all duration-300 ease-in-out"
            ></span></a>
        </li>
        <li>
          <a
            href="#planes"
            class="group relative hover:text-yellow-400 transition"
            >Planes<span
              class="absolute left-1/2 -translate-x-1/2 bottom-[-6px] w-2 h-2 bg-yellow-400 rounded-full opacity-0 group-hover:opacity-100 transition-all duration-300 ease-in-out"
            ></span></a>
        </li>
        <li>
          <a
            href="#cobertura"
            class="group relative hover:text-yellow-400 transition"
            >Cobertura<span
              class="absolute left-1/2 -translate-x-1/2 bottom-[-6px] w-2 h-2 bg-yellow-400 rounded-full opacity-0 group-hover:opacity-100 transition-all duration-300 ease-in-out"
            ></span></a>
        </li>
        <li>
          <a
            href="#contacto"
            class="group relative hover:text-yellow-400 transition"
            >Contacto<span
              class="absolute left-1/2 -translate-x-1/2 bottom-[-6px] w-2 h-2 bg-yellow-400 rounded-full opacity-0 group-hover:opacity-100 transition-all duration-300 ease-in-out"
            ></span></a>
        </li>
      </ul>
    </nav>
  </div>
</header>