---
import ProductModal from './ProductModal.astro';

const productos = [
  {
    id: 'astilla-industrial',
    nombreKey: "product_industrial_chip_name",
    descripcionKey: "product_industrial_chip_desc",
    img: "/images/astilla1.jpeg",
    detallesKey: "product_industrial_chip_details"
  },
  {
    id: 'aserrin-seco',
    nombreKey: "product_dry_sawdust_name",
    descripcionKey: "product_dry_sawdust_desc",
    img: "/images/aserrin.jpeg",
    detallesKey: "product_dry_sawdust_details"
  },
  {
    id: 'corteza-pino',
    nombreKey: "product_pine_bark_name",
    descripcionKey: "product_pine_bark_desc",
    img: "/images/corteza.jpeg",
    detallesKey: "product_pine_bark_details"
  },
  {
    id: 'astilla-energia',
    nombreKey: "product_energy_chip_name",
    descripcionKey: "product_energy_chip_desc",
    img: "/images/astilla.jpeg",
    detallesKey: "product_energy_chip_details"
  },
  {
    id: 'viruta-madera',
    nombreKey: "product_wood_shavings_name",
    descripcionKey: "product_wood_shavings_desc",
    img: "/images/aserrin1.jpeg",
    detallesKey: "product_wood_shavings_details"
  },
  {
    id: 'chip-uniforme',
    nombreKey: "product_uniform_chip_name",
    descripcionKey: "product_uniform_chip_desc",
    img: "/images/astilla3.jpeg",
    detallesKey: "product_uniform_chip_details"
  },
  {
    id: 'astilla-mezclada',
    nombreKey: "product_mixed_chip_name",
    descripcionKey: "product_mixed_chip_desc",
    img: "/images/astilla2.jpeg",
    detallesKey: "product_mixed_chip_details"
  }
];
---

<section id="productos" class="bg-gray-100 py-16 md:py-24">
  <div class="max-w-7xl mx-auto px-6 text-center">
    <div class="scroll-animate-item">
      <h2 class="text-3xl md:text-4xl font-bold font-sans text-brand-secondary uppercase" data-i18n="products_title">
        Productos
      </h2>
      <p class="mt-4 text-lg text-gray-600 font-serif max-w-2xl mx-auto" data-i18n="products_subtitle">
        Principales productos forestales producidos y comercializados por Canahuatexport.
      </p>
    </div>

    <div class="mt-16 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        productos.map((producto, index) => (
          <div
            class="product-card bg-white rounded-lg shadow-md overflow-hidden relative cursor-pointer group flex flex-col scroll-animate-item"
            style={`--animation-delay: ${index * 0.1}s;`}
            data-modal-trigger-for={producto.id}
          >
            <div class="relative w-full h-56 flex-shrink-0">
              <img src={producto.img} alt={producto.nombreKey} class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110" />
            </div>
            <div class="absolute inset-0 bg-brand-accent bg-opacity-80 flex items-center justify-center opacity-0 transition-opacity duration-300 group-hover:opacity-100">
                <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
            </div>
            <div class="p-6 text-left relative z-10 bg-white transition-colors duration-300 group-hover:bg-transparent">
              <h3 class="text-xl font-bold font-sans text-brand-secondary transition-colors duration-300 group-hover:text-white" data-i18n={producto.nombreKey}>
                {/* El texto será llenado por el script */}
              </h3>
              <p class="mt-1 text-gray-500 font-serif transition-colors duration-300 group-hover:text-white" data-i18n={producto.descripcionKey}>
                {/* El texto será llenado por el script */}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

{/* CORRECCIÓN AQUÍ: Pasamos el objeto 'producto' directamente sin intentar traducirlo */}
{
  productos.map((producto) => (
    <ProductModal product={producto} />
  ))
}