---
import ProductModal from './ProductModal.astro';

const productos = [
  {
    id: 'madera-lateral-seca',
    nombre: "Madera Lateral Seca",
    descripcion: "Madera de exportación",
    img: "/images/fibra1.jpg", 
    detalles: "Madera de pino Radiata secada artificialmente, ideal para construcción y mobiliario. Certificada bajo estándares internacionales."
  },
  {
    id: 'pallet-verde',
    nombre: "Pallet Verde",
    descripcion: "Madera de exportación",
    img: "/images/fibra2.jpg",
    detalles: "Pallets ecológicos de madera verde, perfectos para la industria logística. Dimensiones personalizables y alta resistencia."
  },
  {
    id: 'madera-lateral-verde',
    descripcion: "Madera de exportación",
    img: "/images/fibra3.jpg",
    detalles: "Madera sin proceso de secado, robusta y económica para usos industriales y embalajes. Calidad garantizada para exportación."
  },
  {
    id: 'madera-central-verde',
    nombre: "Madera Central Verde",
    descripcion: "Mercado nacional",
    img: "/images/fibra1.jpg", 
    detalles: "Piezas de madera central, ideales para el mercado local en construcción ligera y estructuras no expuestas. Producto versátil y accesible."
  },
  {
    id: 'madera-lateral-seca-s4s',
    nombre: "Madera Lateral Seca S4S",
    descripcion: "Mercado nacional y de exportación",
    img: "/images/fibra2.jpg",
    detalles: "Madera secada y cepillada por sus cuatro caras (S4S), brindando un acabado liso y uniforme. Perfecta para muebles y acabados de alta calidad."
  },
  {
    id: 'astilla-pulpable',
    nombre: "Astilla Pulpable",
    descripcion: "Mercado nacional y de exportación",
    img: "/images/fibra3.jpg",
    detalles: "Astillas de madera de pino Radiata de alta calidad, utilizadas en la fabricación de celulosa y como biomasa energética. Producida de forma sostenible."
  },
];
---

<section id="productos" class="bg-gray-100 py-16 md:py-24">
  <div class="max-w-7xl mx-auto px-6 text-center">
    <div class="scroll-animate-item">
      <h2 class="text-3xl md:text-4xl font-bold font-sans text-brand-secondary uppercase">
        Productos
      </h2>
      <p class="mt-4 text-lg text-gray-600 font-serif max-w-2xl mx-auto">
        Principales productos forestales producidos y comercializados por Canahuatexport.
      </p>
    </div>

    <div class="mt-16 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        productos.map((producto, index) => (
          <div
            class="product-card bg-white rounded-lg shadow-md overflow-hidden relative cursor-pointer group flex flex-col"
            style={`--animation-delay: ${index * 0.1}s;`}
            data-modal-trigger-for={producto.id}
          >
            {/* Contenedor de la imagen */}
            <div class="relative w-full h-56 flex-shrink-0">
              <img src={producto.img} alt={producto.nombre} class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110" />
            </div>

            {/* Este es el nuevo overlay que cubre todo el contenido al hacer hover */}
            <div class="absolute inset-0 bg-brand-accent bg-opacity-80 flex items-center justify-center opacity-0 transition-opacity duration-300 group-hover:opacity-100">
                <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
            </div>

            {/* Contenido de texto, ahora con z-index para que esté sobre la imagen pero debajo del overlay */}
            <div class="p-6 text-left relative z-10 bg-white transition-colors duration-300 group-hover:bg-transparent">
              <h3 class="text-xl font-bold font-sans text-brand-secondary transition-colors duration-300 group-hover:text-white">
                {producto.nombre}
              </h3>
              <p class="mt-1 text-gray-500 font-serif transition-colors duration-300 group-hover:text-white">
                {producto.descripcion}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

{
  productos.map((producto) => (
    <ProductModal product={producto} />
  ))
}