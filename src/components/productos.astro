---

<section id="productos" class="bg-gray-100 py-16 md:py-24">
  <div class="max-w-7xl mx-auto px-6 text-center">
    <div class="scroll-animate-item">
      <h2 class="text-3xl md:text-4xl font-bold font-sans text-brand-secondary uppercase" data-i18n="products_title">
        Productos
      </h2>
      <p class="mt-4 text-lg text-gray-600 font-serif max-w-2xl mx-auto" data-i18n="products_subtitle">
        Principales productos forestales producidos y comercializados por Canahuatexport.
      </p>
    </div>

    <div class="mt-16 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        productos.map((producto, index) => (
          <div
            class="product-card bg-white rounded-lg shadow-md overflow-hidden relative cursor-pointer group flex flex-col scroll-animate-item"
            style={`--animation-delay: ${index * 0.1}s;`}
            data-modal-trigger-for={producto.id}
          >
            <div class="relative w-full h-56 flex-shrink-0">
              {/* Usamos nombreKey para el alt, i18next no traduce atributos alt directamente */}
              <img src={producto.img} alt={producto.nombreKey} class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110" />
            </div>
            <div class="absolute inset-0 bg-brand-accent bg-opacity-80 flex items-center justify-center opacity-0 transition-opacity duration-300 group-hover:opacity-100">
                <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
            </div>
            <div class="p-6 text-left relative z-10 bg-white transition-colors duration-300 group-hover:bg-transparent">
              {/* Añadimos data-i18n a los textos */}
              <h3 class="text-xl font-bold font-sans text-brand-secondary transition-colors duration-300 group-hover:text-white" data-i18n={producto.nombreKey}></h3>
              <p class="mt-1 text-gray-500 font-serif transition-colors duration-300 group-hover:text-white" data-i18n={producto.descripcionKey}></p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

{/* Pasamos el objeto 'producto' completo al modal */}
{
  productos.map((producto) => (
    <ProductModal product={producto} />
  ))
}

{/* El script para abrir/cerrar modales no necesita cambios */}
<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const productCards = document.querySelectorAll('[data-modal-trigger-for]');
    
    productCards.forEach(card => {
      card.addEventListener('click', () => {
        const productId = card.getAttribute('data-modal-trigger-for');
        openModal(productId);
      });
    });

    function openModal(productId) {
      const modal = document.getElementById(`modal-${productId}`);
      if (!modal) return;
      
      const modalContent = modal.querySelector('.modal-content');
      
      document.body.style.overflow = 'hidden';
      modal.classList.remove('invisible', 'opacity-0');
      setTimeout(() => modalContent.classList.remove('opacity-0', 'scale-95'), 50);
      
      modal.addEventListener('click', () => closeModal(productId));
      modal.querySelectorAll('.modal-close-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
            e.stopPropagation(); // Evita que el click en el botón cierre también por el overlay
            closeModal(productId);
        });
      });
    }

    function closeModal(productId) {
      const modal = document.getElementById(`modal-${productId}`);
      if (!modal) return;

      const modalContent = modal.querySelector('.modal-content');
      modalContent.classList.add('opacity-0', 'scale-95');
      setTimeout(() => {
        modal.classList.add('invisible', 'opacity-0');
        document.body.style.overflow = '';
      }, 300);
    }

    document.addEventListener('keydown', (event) => {
      if (event.key === 'Escape') {
        const openModal = document.querySelector('.modal-overlay:not(.invisible)');
        if (openModal) {
          const modalId = openModal.id.replace('modal-', '');
          closeModal(modalId);
        }
      }
    });
  });
</script>