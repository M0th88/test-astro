---
import ProductModal from './ProductModal.astro';

const productos = [
  {
    id: 'astilla-industrial',
    nombre: "Astilla Industrial",
    descripcion: "Para celulosa y tableros",
    img: "/images/astilla1.jpeg", // Corregido a .jpeg
    detalles: "Astillas de alta calidad, procesadas para cumplir con los estándares de la industria de la celulosa y la fabricación de tableros."
  },
  {
    id: 'aserrin-seco',
    nombre: "Aserrín Seco",
    descripcion: "Ideal para camas de animales y biomasa",
    img: "/images/aserrin.jpeg", // Corregido a .jpeg
    detalles: "Aserrín de pino limpio y seco, excelente como material absorbente para camas de animales o como combustible de biomasa."
  },
  {
    id: 'corteza-pino',
    nombre: "Corteza de Pino",
    descripcion: "Uso decorativo y energético",
    img: "/images/corteza.jpeg", // Corregido a .jpeg
    detalles: "Corteza de pino utilizada en jardinería para control de malezas y decoración, así como fuente de energía en calderas de biomasa."
  },
  {
    id: 'astilla-energia',
    nombre: "Astilla para Energía",
    descripcion: "Combustible de biomasa",
    img: "/images/astilla.jpeg", // Corregido a .jpeg
    detalles: "Astillas de madera seleccionadas para un alto poder calorífico, optimizadas como combustible renovable para la generación de energía."
  },
  {
    id: 'viruta-madera',
    nombre: "Viruta de Madera",
    descripcion: "Subproducto para diversos usos",
    img: "/images/aserrin1.jpeg", // Corregido a .jpeg
    detalles: "Viruta de madera limpia, ideal para embalaje, camas de animales o como material compostable."
  },
  {
    id: 'chip-uniforme',
    nombre: "Chip Uniforme",
    descripcion: "Para procesos industriales específicos",
    img: "/images/astilla3.jpeg", // Corregido a .jpeg
    detalles: "Chips de madera de tamaño controlado, perfectos para procesos industriales que requieren una materia prima homogénea."
  },
  {
    id: 'astilla-mezclada',
    nombre: "Astilla Mezclada",
    descripcion: "Biomasa de alta densidad",
    img: "/images/astilla2.jpeg", // Este ya era .jpeg
    detalles: "Mezcla de astillas de diferentes granulometrías, ideal para calderas industriales que requieren un flujo de combustible constante y denso."
  }
];
---

<section id="productos" class="bg-gray-100 py-16 md:py-24">
  <div class="max-w-7xl mx-auto px-6 text-center">
    <div class="scroll-animate-item">
      <h2 class="text-3xl md:text-4xl font-bold font-sans text-brand-secondary uppercase">
        Productos
      </h2>
      <p class="mt-4 text-lg text-gray-600 font-serif max-w-2xl mx-auto">
        Principales productos forestales producidos y comercializados por Canahuatexport.
      </p>
    </div>

    <div class="mt-16 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        productos.map((producto, index) => (
          <div
            class="product-card bg-white rounded-lg shadow-md overflow-hidden relative cursor-pointer group flex flex-col scroll-animate-item"
            style={`--animation-delay: ${index * 0.1}s;`}
            data-modal-trigger-for={producto.id}
          >
            <div class="relative w-full h-56 flex-shrink-0">
              <img src={producto.img} alt={producto.nombre} class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110" />
            </div>
            <div class="absolute inset-0 bg-brand-accent bg-opacity-80 flex items-center justify-center opacity-0 transition-opacity duration-300 group-hover:opacity-100">
                <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
            </div>
            <div class="p-6 text-left relative z-10 bg-white transition-colors duration-300 group-hover:bg-transparent">
              <h3 class="text-xl font-bold font-sans text-brand-secondary transition-colors duration-300 group-hover:text-white">
                {producto.nombre}
              </h3>
              <p class="mt-1 text-gray-500 font-serif transition-colors duration-300 group-hover:text-white">
                {producto.descripcion}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

{
  productos.map((producto) => (
    <ProductModal product={producto} />
  ))
}