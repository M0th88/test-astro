---
// Define aquí tus redes sociales para que sea fácil cambiarlas
const redesSociales = [
  {
    nombre: "Facebook",
    url: "https://facebook.com", // Reemplaza con tu URL de Facebook
    icono: `
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
      </svg>
    `
  },
  {
    nombre: "Instagram",
    url: "https://instagram.com", // Reemplaza con tu URL de Instagram
    icono: `
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
        <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
        <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
      </svg>
    `
  }
];

const anioActual = new Date().getFullYear();
---

<footer class="bg-white border-t border-gray-200">
  <div class="max-w-7xl mx-auto px-6 py-6 flex flex-col md:flex-row items-center justify-between gap-4">
    
    <p class="text-sm text-gray-500 font-serif">
      &copy; {anioActual} Canahuatexport. Todos los derechos reservados.
    </p>

    <div class="flex items-center gap-4">
      {
        redesSociales.map(red => (
          <a 
            href={red.url}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={`Visita nuestro perfil de ${red.nombre}`}
            class="w-9 h-9 flex items-center justify-center bg-brand-secondary text-white rounded-full hover:bg-brand-accent transition-colors"
          >
            <Fragment set:html={red.icono} />
          </a>
        ))
      }
    </div>
  </div>
</footer>