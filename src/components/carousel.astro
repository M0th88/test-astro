  <div class="overflow-hidden w-full h-full">
    <div
      id="carousel-track"
      class="flex w-full h-full transition-transform duration-700 ease-in-out"
    >
      {/* Slide 1: Imagen con Texto */}
      <div class="w-full h-full flex-shrink-0 relative">
        <img
          src="/images/fibra1.jpg"
          class="w-full h-full object-cover object-center"
          alt="Familia conectada"
        />
        <div class="absolute inset-0 bg-black/40"></div>
        <div class="absolute inset-0 flex flex-col items-center justify-center text-center text-white p-8">
          <h2 class="text-4xl md:text-6xl font-bold mb-4 animate-fade-in-down">Tu Conexión al Futuro</h2>
          <p class="text-lg md:text-xl max-w-2xl mb-8 animate-fade-in-up">
            Soluciones forestales innovadoras y sostenibles para un mundo más verde.
          </p>
          <a href="#contacto" class="bg-brand-accent text-white font-bold py-3 px-8 rounded-lg hover:bg-red-700 transition-colors animate-fade-in-up">
            Contáctanos
          </a>
        </div>
      </div>

