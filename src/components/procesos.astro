---

const procesos = [
  {
    tituloKey: "process_sawing_title",
    descripcionKey: "process_sawing_text",
    img: "/images/aserrado.jpg" 
  },
  {
    tituloKey: "process_drying_title",
    descripcionKey: "process_drying_text",
    img: "/images/secado.jpg" 
  },
  {
    tituloKey: "process_remanufacturing_title",
    descripcionKey: "process_remanufacturing_text",
    img: "/images/remanufactura.jpg" 
  },
];

const logos = [
  {
    src: "/images/iconof.jpg",
    alt: "Logo Canahuatexport"
  },
  {
    src: "/images/logo1.jpg", 
    alt: "Logo Canahuate Transportes"
  },
  {
    src: "/images/logo2.jpg",
    alt: "Logo Canahuate & Santos Transportes"
  }
];
---

<section id="procesos" class="bg-white py-16 md:py-24">
  <div class="max-w-7xl mx-auto px-6 text-center">
    
    <div class="scroll-animate-item">
      <h2 class="text-3xl md:text-4xl font-bold font-sans text-brand-secondary uppercase" data-i18n="processes_title">
        Procesos Productivos
      </h2>
    </div>

    <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-x-12 gap-y-16">
      {
        procesos.map((proceso, index) => (
          <div class="scroll-animate-item text-center" style={`--animation-delay: ${index * 0.2}s;`}>
            <img 
              src={proceso.img} 
              alt={proceso.tituloKey} 
              class="w-48 h-48 rounded-full object-cover mx-auto shadow-lg border-4 border-white" 
            />
            <h3 class="mt-6 text-2xl font-bold font-sans text-brand-secondary" data-i18n={proceso.tituloKey}>
              {/* El texto será llenado por el script */}
            </h3>
            <p class="mt-4 text-gray-600 font-serif leading-relaxed" data-i18n={proceso.descripcionKey}>
              {/* El texto será llenado por el script */}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>

<div class="border-t border-gray-200 max-w-7xl mx-auto"></div>

<section class="bg-white py-16 md:py-20">
  <div class="max-w-5xl mx-auto px-6 scroll-animate-item">
    <div class="flex flex-wrap items-center justify-center gap-x-16 gap-y-10 md:justify-around">
      {
        logos.map(logo => (
          <img 
            src={logo.src} 
            alt={logo.alt} 
            class="h-16 md:h-20 duration-300"
          />
        ))
      }
    </div>
  </div>
</section>