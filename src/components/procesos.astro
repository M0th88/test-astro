---
// Contenido de la sección de Procesos
const procesos = [
  {
    titulo: "Aserrado",
    descripcion: "El Proceso de Aserrado de la madera consiste en la transformación de una troza de forma cilíndrica a un producto con dimensiones específicas de ancho, largo y espesor...",
    img: "/images/fibra1.jpg" // Reemplaza con tu imagen
  },
  {
    titulo: "Secado",
    descripcion: "El proceso de Secado, se realiza dentro de Cámaras de Secado, en las cuales se establecen climas artificiales progresivamente más cálidos y secos...",
    img: "/images/fibra2.jpg" // Reemplaza con tu imagen
  },
  {
    titulo: "Remanufactura",
    descripcion: "El proceso de Remanufactura, consiste en la preparación de la madera seca, su clasificación en distintos grados de calidad, cepillado, etiquetado, empaquetado y despacho...",
    img: "/images/fibra3.jpg" // Reemplaza con tu imagen
  },
];

// Contenido de la sección de Empresas
const logos = [
  {
    src: "/images/iconof.jpg",
    alt: "Logo Canahuatexport"
  },
  {
    src: "/images/logo1.jpg", // <-- CAMBIA ESTO por la imagen correcta
    alt: "Logo Canahuate Transportes"
  },
  {
    src: "/images/logo2.jpg", // <-- CAMBIA ESTO por la imagen correcta
    alt: "Logo Canahuate & Santos Transportes"
  }
];
---

<section id="procesos" class="bg-white py-16 md:py-24">
  <div class="max-w-7xl mx-auto px-6 text-center">
    
    <div class="scroll-animate-item">
      <h2 class="text-3xl md:text-4xl font-bold font-sans text-brand-secondary uppercase">
        Procesos Productivos
      </h2>
    </div>

    <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-x-12 gap-y-16">
      {
        procesos.map((proceso, index) => (
          <div class="scroll-animate-item text-center" style={`--animation-delay: ${index * 0.2}s;`}>
            <img 
              src={proceso.img} 
              alt={proceso.titulo} 
              class="w-48 h-48 rounded-full object-cover mx-auto shadow-lg border-4 border-white" 
            />
            <h3 class="mt-6 text-2xl font-bold font-sans text-brand-secondary">
              {proceso.titulo}
            </h3>
            <p class="mt-4 text-gray-600 font-serif leading-relaxed">
              {proceso.descripcion}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>

<div class="border-t border-gray-200 max-w-7xl mx-auto"></div>

<section class="bg-white py-16 md:py-20">
  <div class="max-w-5xl mx-auto px-6 scroll-animate-item">
    <div class="flex flex-wrap items-center justify-center gap-x-16 gap-y-10 md:justify-around">
      {
        logos.map(logo => (
          <img 
            src={logo.src} 
            alt={logo.alt} 
            class="h-16 md:h-20 grayscale opacity-70 hover:grayscale-0 hover:opacity-100 transition-all duration-300"
          />
        ))
      }
    </div>
  </div>
</section>